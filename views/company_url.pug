extends layout.pug

block content
  div.content-wrapper
    section.breadcrumb
      div.container
        ol.breadcrumb(style="margin-bottom: 0;padding: 0;")   
          li.breadcrumb-item 
            a(href="/") Home 
          li.breadcrumb-item.active 
            a(href="/user/company") Groups
          li.breadcrumb-item.active 
            a(id="back-company") Urls
    section.content-header.row(style="justify-content: center;")

      div.col-10
        div.card-header(style="background-color: #f4f6f9;padding-bottom: 25px;border: 1px solid #f4f6f9;")
          div.card-tools
            form(action="#" method="POST" enctype='application/json' id="add-company-url") 
              div(style="display: flex;")
                input.form-control(name="long_url" placeholder="https://" type="url" required style="margin-right: 10px;width: 250px;")  
                button.btn.btn-warning.btn-sm(type="submit" style="color: white;") Shorten Url
        div.card

          div.card-body.table-responsive.p-0(id="lists")
    script.
      import(`/js/company_url.js`)
