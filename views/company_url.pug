extends layout.pug

block content
  div(class="content-wrapper")
    section(class="breadcrumb") 
      div.container
        ol.breadcrumb   
          li.breadcrumb-item 
            a(href="/") Home 
          li.breadcrumb-item.active 
            a(href="/user/company") My Url Groups
          li.breadcrumb-item.active 
            a(id="back-company") My Url Group
    section(class="content-header row")
      div(class="col-1")
      div(class="col-10")
        div(class="card")
          div(class="card-header")
            h3(class="card-title") Links in Url Group
            div(class="card-tools")
              form(action="#" method="POST" enctype='application/json' id="add-company-url") 
                div.input-group.input-group-sm(style="width: 300px;")
                  input(name="long_url" placeholder="https://" class="form-control" type="url" required )  
                  button(type="submit" class="btn  btn-primary btn-sm") Shorten Url
          div(class="card-body table-responsive p-0" id="lists")
    script.
      import(`/js/company_url.js`)
      