extends layout.pug

block content
  div(class="content-wrapper")
    section(class="content-header")
      div(class="col-12")
        div(class="card")
          div(class="card-header")
            h3(class="card-title") My Companies
            div(class="card-tools")
              div(class="input-group input-group-sm" style="width: 150px;")
                input(type="text" name="table_search" class="form-control float-right" placeholder="Search")
                div(class="input-group-append")
                  button(type="submit" class="btn btn-default")
                    i(class="fas fa-search")
          div(class="card-body table-responsive p-0" id="lists")

          div
            form(action="/api/1.0/company" method="POST" enctype='application/json' id="create-company") 
              div
                input(id="company_name" name="company_name"  placeholder="new company" class="input-round" required )                  
                button(type="submit" class="btn  btn-primary btn-sm") Create
    script.
      import(`/js/user_company.js`)