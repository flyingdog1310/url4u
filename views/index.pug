extends layout.pug

block content
  div(class="content-wrapper")
    div(class="content-header")
      div(class="container-fluid")
        div(class="row mb-2")
          div(class="col-sm-6")
            h1(class="m-0") Get your short url now
    form(action="/api/1.0/url" method="POST" enctype='application/json' id="create-short-url") 
      div
        label(for="company_id") company id:
        input(id="company_id" name="company_id" required) 
      div
        label(for="long_url") long url:
        input(id="long_url" name="long_url" required ) 

      div(id="submit") 
        button(type="submit" class="btn  btn-primary btn-sm") Create Url
  
    script.
      import(`/js/index.js`)


