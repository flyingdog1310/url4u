extends layout.pug

block content
  div(class="content-wrapper")
    div(class="row mb-2")
      div(class="col-md-1")
      a(id="back-company") << Stop Edit & Back to Url Group
    div(class="row align-items-center")
      div(class="col-md-1")
      div(class="col-md-6" style="padding-top:10px")
        h4(class="mb-0")
          i(class="fas fa-edit")
          |Edit Preview
    hr
    div(class="row")
      div(class="col-md-1")
      div(class="col-md-5")
        form(method="post" enctype="multipart/form-data" id="update-short-url") 
          div(style="padding-top:5px") 
            label(for="short_url" style="padding-right:5px") https://url4u.today/  
            input(id="short_url" name="short_url" required) 
            button(type="button" id="copy-url" class= "btn btn-secondary btn-xs")
              i(class="fas fa-copy")
          div(style="padding-top:5px") 
            label(for="long_url" style="padding-right:5px") Long url:
            input(id="long_url" name="long_url" type="url" required style="width:300px;") 
          div(class="col" style="padding-top:5px" )
            div(style="width: 466px; height: 261px; overflow: hidden;")
              img(id="picturePreview" style="object-fit: cover; object-position:center center; width: 100%; height: 100%;")
            input(id="picture" name="picture" type="file" accept="image/png, image/jpeg, image/jpg") 
            input(id="picture_url" name="picture_url" type="url" style="display:none")
          div(style="padding-top:5px") 
            label(for="title" style="padding-right:5px") Title:
            input(id="title" name="title" maxlength="128" style="width:300px;") 
          div(style="padding-top:5px") 
            label(for="description" style="padding-right:5px") Description:
            input(id="description" name="description" maxlength="128" style="width:300px;") 
          div(id="submit") 
            button(type="submit" class="btn  btn-primary btn-sm") Modify
      div(class="option col-md-6")
        div(class="mb-3")
          i(class="fas fa-search" style="padding-right:5px") 
          |Default Images
        div(class="default-container-wrapper")
          div(class="default-container" id="craw-img-list")
    script.
      import(`/js/url_modify.js`)
