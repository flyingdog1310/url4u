extends layout.pug

block content 
  div(class="content-wrapper")
    section(class="breadcrumb") 
      div.container
        ol.breadcrumb(style="margin-bottom: 0;padding: 0;")   
          li.breadcrumb-item 
            a(href="/") Home 
          li.breadcrumb-item.active 
            a(href="/user/company") Groups
          li.breadcrumb-item.active 
            a(id="back-company") Urls
          li.breadcrumb-item.active Analytics
  
    section(class="content-header")
        div(class="row")  
          div(class="col-md-1")
          div(class="col-md-6")
            div(class="card")
              div(class="card-header")
                h3(class="card-title") Time-Clicks                
                div(class="class-tools")  
                  form(id="time-clicks" enctype='application/json' class="text-right")
                    div.input-group.input-group-sm
                      input.form-control(type="date" name="stop" id="stop")
                      select.form-control(name="method" style="width:30px;")
                        option(value="day") by day
                        option(value="hour") by hour
                      select.form-control(name="url_id" id="compare-url")
                        option(value=0) ---Compare Url---
                      div
                        button.btn.btn-secondary.btn-sm(type="submit") Search 
              div(class="card-body")
                div(class="d-flex")
                  p(class="d-flex flex-column text-left")
                    span Clicks Today
                    span(class="text-bold text-lg" id="click-today") 0
                    span(class="text-sm" id="clicks-today-compare-color")
                      i(class="fas" id="clicks-today-compare-i") 
                      span(id="clicks-today-compare") 0%               
                  p(class="d-flex flex-column ml-auto text-left")
                    span Clicks This Hour
                    span(class="text-bold text-lg" id="click-hour") 0
                    span(class="text-sm" id="clicks-hour-compare-color")
                      i(class="fas" id="clicks-hour-compare-i") 
                      span(id="clicks-hour-compare") 0%                    
                  p(class="d-flex flex-column ml-auto text-left")
                    span Total Click
                    span(class="text-bold text-lg" id="total-click") 0
                  p(class="d-flex flex-column ml-auto")
                  p(class="d-flex flex-column ml-auto")
                  p(class="d-flex flex-column ml-auto")
                div(class="chartjs-size-monitor")
                  div(class="chartjs-size-monitor-expand")
                  div(class="chartjs-size-monitor-shrink")
                  div(id="line-chart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 667px;" width="667" height="250" class="chartjs-render-monitor")
            div(class="card")
              div(class="card-header")
                h3(class="card-title") Device
                div(class="class-tools")
              div(class="card-body")
                div(class="row")
                  div(class="col-1")
                  div(class="chartjs-size-monitor")
                    div(class="chartjs-size-monitor-expand")
                    div(class="chartjs-size-monitor-shrink")
                    div(id="device-pie-chart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block;" class="chartjs-render-monitor")
                  div(class="col-4 ml-auto")
                    p(class="lead")
                    div(class="table-responsive")
                      table(class="table")
                        tbody 
                          tr
                            th(style="width:20%") 1.
                            td(id="device1") ---
                          tr
                            th(style="width:20%") 2.
                            td(id="device2") ---
                          tr  
                            th(style="width:20%") 3.
                            td(id="device3") ---
                          tr  
                            th(style="width:20%") 4.
                            td(id="device4") ---
                          tr  
                            th(style="width:20%") 5.
                            td(id="device5") ---
            div(class="card")
              div(class="card-header")
                h3(class="card-title") Referer
                div(class="class-tools")
              div(class="card-body")
                div(class="row")
                  div(class="col-1")
                  div(class="chartjs-size-monitor")
                    div(class="chartjs-size-monitor-expand")
                    div(class="chartjs-size-monitor-shrink")
                    div(id="referer-pie-chart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block;" class="chartjs-render-monitor")
                  div(class="col-4 ml-auto")
                    p(class="lead") 
                    div(class="table-responsive")
                      table(class="table")
                        tbody 
                          tr
                            th(style="width:20%") 1.
                            td(id="referrer1") ---
                          tr
                            th(style="width:20%") 2.
                            td(id="referrer2") ---
                          tr  
                            th(style="width:20%") 3.
                            td(id="referrer3") ---
                          tr  
                            th(style="width:20%") 4.
                            td(id="referrer4") ---
                          tr  
                            th(style="width:20%") 5.
                            td(id="referrer5") ---
          div(class="col-md-4")
            div(class="card")
              div(class="card-header")
                h3(class="card-title") Day-Clicks                
                div(class="class-tools")  
              div(class="card-body")
                div(class="chartjs-size-monitor")
                  div(class="chartjs-size-monitor-expand")
                  div(class="chartjs-size-monitor-shrink")
                  div(id="heat-chart" class="chartjs-render-monitor" style="min-height: 500px; height: 500px; max-height: 500px; max-width: 100%; display: block; width: 667px;")     
            div(class="card")
              div(class="card-header")
                h3(class="card-title") Week-Clicks
                div(class="class-tools")
              div(class="card-body")
                div(class="chartjs-size-monitor")
                  div(class="chartjs-size-monitor-expand")
                  div(class="chartjs-size-monitor-shrink")
                  div(id="column-chart" height="300" class="chartjs-render-monitor")
            div(class="card")
              div(class="card-header")
                h3(class="card-title") Top-Clicks
                div(class="class-tools")
              div(class="card-body")
                div(class="progress-group" id="top-click1") ---
                div(class="progress-group" id="top-click2") ---
                div(class="progress-group" id="top-click3") ---
                div(class="progress-group" id="top-click4") ---
                div(class="progress-group" id="top-click5") ---

        div(class="row")
          div(class="col-md-1")
          div(class="col-md-10")
            div(class="card")
              div(class="card-header")
                h3(class="card-title") Location
                div(class="class-tools")
              div(class="card-body")
                div(class="chartjs-size-monitor")
                  div(id="map-chart" class="chartjs-render-monitor" style="min-height: 600px; height: 600px; max-height: 600px; max-width: 100%; display: block;")

  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-base.min.js" type="text/javascript")
  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-core.min.js")
  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-heatmap.min.js")
  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-map.min.js" type="text/javascript")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/proj4js/2.3.15/proj4.js" data-export="true") 
  script(src="https://cdn.anychart.com/releases/8.11.0/geodata/custom/world/world.js" type="text/javascript")

  script.
    import(`/js/url_analytic.js`)
