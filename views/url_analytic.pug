extends layout.pug

block content 
  div.content-wrapper
    section.breadcrumb
      div.container
        ol.breadcrumb(style="margin-bottom: 0;padding: 0;")   
          li.breadcrumb-item 
            a(href="/") Home 
          li.breadcrumb-item.active 
            a(href="/user/company") Groups
          li.breadcrumb-item.active 
            a(id="back-company") Urls
          li.breadcrumb-item.active Analytics

    section.content-header
      div.row  
        div.col-md-1
        div.col-md-6
          div.card
            div.card-header
              h3.card-title(style="margin-bottom: 10px;") Time-Clicks                
              div.class-tools 
                form.text-right(id="time-clicks" enctype='application/json') 
                  div.input-group.input-group-sm
                    input.form-control(type="date" name="stop" id="stop")
                    select.form-control(name="method" style="width:30px;")
                      option(value="day") by day
                      option(value="hour") by hour
                    select.form-control(name="url_id" id="compare-url")
                      option(value=0) ---Compare Url---
                    div
                      button.btn.btn-secondary.btn-sm(type="submit" style="margin-left: 10px;") Search 
            div.card-body
              div.d-flex
                p.d-flex.flex-column.text-left
                  span Clicks Today
                  span.text-bold.text-lg(id="click-today") 0
                  span.text-sm(id="clicks-today-compare-color")
                    i.fas(id="clicks-today-compare-i") 
                    span(id="clicks-today-compare") 0%               
                p.d-flex.flex-column.ml-auto.text-left
                  span Clicks This Hour
                  span.text-bold.text-lg(id="click-hour") 0
                  span.text-sm(id="clicks-hour-compare-color")
                    i.fas(id="clicks-hour-compare-i") 
                    span(id="clicks-hour-compare") 0%                    
                p.d-flex.flex-column.ml-auto.text-left
                  span Total Click
                  span.text-bold.text-lg(id="total-click") 0
                p.d-flex.flex-column.ml-auto
                p.d-flex.flex-column.ml-auto
                p.d-flex.flex-column.ml-auto
              div.chartjs-size-monitor
                div.chartjs-render-monitor(id="line-chart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 667px;" width="667" height="250")
          div.card
            div.card-header
              h3.card-title Device
              div.class-tools
            div.card-body
              div.row
                div.col-1
                div.chartjs-size-monitor
                  div.chartjs-render-monitor(id="device-pie-chart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block;")
                div.col-4.ml-auto
                  p.lead
                  div.table-responsive
                    table.table
                      tbody 
                        tr
                          th(style="width:20%") 1.
                          td(id="device1") ---
                        tr
                          th(style="width:20%") 2.
                          td(id="device2") ---
                        tr  
                          th(style="width:20%") 3.
                          td(id="device3") ---
                        tr  
                          th(style="width:20%") 4.
                          td(id="device4") ---
                        tr  
                          th(style="width:20%") 5.
                          td(id="device5") ---
          div.card
            div.card-header
              h3.card-title Referer
              div.class-tools
            div.card-body
              div.row
                div.col-1
                div.chartjs-size-monitor
                  div.chartjs-render-monitor(id="referer-pie-chart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block;")
                div.col-4.ml-auto
                  p.lead
                  div.table-responsive
                    table.table
                      tbody 
                        tr
                          th(style="width:20%") 1.
                          td(id="referrer1") ---
                        tr
                          th(style="width:20%") 2.
                          td(id="referrer2") ---
                        tr  
                          th(style="width:20%") 3.
                          td(id="referrer3") ---
                        tr  
                          th(style="width:20%") 4.
                          td(id="referrer4") ---
                        tr  
                          th(style="width:20%") 5.
                          td(id="referrer5") ---
        div.col-md-4
          div.card
            div.card-header
              h3.card-title Day-Clicks                
              div.class-tools  
            div.card-body
              div.chartjs-size-monitor
                div.chartjs-render-monitor(id="heat-chart" style="min-height: 500px; height: 500px; max-height: 500px; max-width: 100%; display: block; width: 667px;")     
          div.card
            div.card-header
              h3.card-title Week-Clicks
              div.class-tools
            div.card-body
              div.chartjs-size-monitor
                div.chartjs-render-monitor(id="column-chart")
          div.card
            div.card-header
              h3.card-title Top-Clicks
              div.class-tools
            div.card-body
              div.progress-group(id="top-click1") ---
              div.progress-group(id="top-click2") ---
              div.progress-group(id="top-click3") ---
              div.progress-group(id="top-click4") ---
              div.progress-group(id="top-click5") ---

      div.row
        div.col-md-1
        div.col-md-10
          div.card
            div.card-header
              h3.card-title Location
              div.class-tools
            div.card-body
              div.chartjs-size-monitor
                div.chartjs-render-monitor(id="map-chart" style="min-height: 600px; height: 600px; max-height: 600px; max-width: 100%; display: block;")

  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-base.min.js" type="text/javascript")
  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-core.min.js")
  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-heatmap.min.js")
  script(src="https://cdn.anychart.com/releases/8.11.0/js/anychart-map.min.js" type="text/javascript")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/proj4js/2.3.15/proj4.js" data-export="true") 
  script(src="https://cdn.anychart.com/releases/8.11.0/geodata/custom/world/world.js" type="text/javascript")

  script.
    import(`/js/url_analytic.js`)
